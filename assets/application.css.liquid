@font-face {
  font-family: "Roboto";
  font-style: normal;
  font-weight: 400;
  src: local("Roboto Regular"), url("{{ 'Roboto-Regular.ttf' | asset_url }}") format("ttf");
  text-rendering: optimizeLegibility;
  font-display: swap;
}

@font-face {
  font-family: "Roboto";
  font-style: normal;
  font-weight: 700;
  src: local("Roboto Medium"), url("{{ 'Roboto-Medium.ttf' | asset_url }}") format("ttf");
  text-rendering: optimizeLegibility;
  font-display: swap;
}

@font-face {
  font-family: "Roboto";
  font-style: normal;
  font-weight: 900;
  src: local("Roboto Bold"), url("{{ 'Roboto-Bold.ttf' | asset_url }}") format("ttf");
  text-rendering: optimizeLegibility;
  font-display: swap;
}

@font-face {
  font-family: "Roboto Black";
  font-style: normal;
  font-weight: 700;
  src: local("Roboto Bold"), url("{{ 'Roboto-Black.ttf' | asset_url }}") format("ttf");
  text-rendering: optimizeLegibility;
  font-display: swap;
}

body {margin: 0}
.span--block {display: block;}
.text-align--center{text-align: center;}

.promo-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  background-color: #005BC4;
}

.promo-bar {
  color: #fff;
  font-family: "Roboto", Helvetica, sans-serif;
  font-size: 11px;
  letter-spacing: 2px;
  line-height: 16px;
  font-weight: 900;
  text-transform: uppercase;
}

.nav-mobile{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18px 27px 21px;
}

.nav-mobile__logo {
  width: 100%;
  max-width: 119px;
}

.nav-desktop {
  display: none;
}

.btn--contained {
  display: flex;
  align-items: center;
  justify-content: center;
  width: auto;
  height: 41px;
  padding: 0 16px;
  color: #fff;
  background: #000;
  text-decoration: none;
  border-radius: 4px;
}
.btn--contained span {
  font-family: "Roboto", Helvetica, sans-serif;
  font-size: 14px;
  letter-spacing: 2px;
  line-height: 28px;
  font-weight: 900;
  text-transform: uppercase;
}

.btn--uncontained {
  color: #000;
  text-decoration: none;
}
.btn--uncontained:not(:last-child)::after {
  content: '|';
}

.btn--uncontained span {
  margin: 0 16px;
  font-family: "Roboto", Helvetica, sans-serif;
  font-size: 14px;
  letter-spacing: 2px;
  line-height: 40px;
  font-weight: 900;
  text-transform: uppercase;
  text-decoration: underline;
}

section {position: relative} 

.object-fit--image {
  position: relative;
  width: 100%;
  height: 90vh;
  min-height: 650px;
  overflow: hidden;
}

.object-fit--image img {
  position: relative;
  width: 100%;
  height: 100%;
  -o-object-fit: cover;
  object-fit: cover;
}

.value-props__container {
  padding: 45px 0;
  background: #FAFAFA;
}

.value-props__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.value-props__content:not(:last-of-type) {
  margin-bottom: 42px;
}

.value-props__content img {
  width: 100%;
  max-width: 75px;
  margin-bottom: 14px;
}

.value-props__text {
  text-align: center;
  font-family: "Roboto", Helvetica, sans-serif;
  font-size: 16px;
  letter-spacing: 0.8px;
  line-height: 24px;
  font-weight: 900;
  text-transform: uppercase;
}

@media only screen and (min-width: 768px) {
  .btn--contained { 
    height: 50px;
    padding: 0;
  }

  .btn--uncontained span{
    margin: 0 22px;
  }

  .value-props__container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 59px 5px 53px;
    margin-bottom: 100px;
  }

  .value-props__content {
    flex: calc(100% / 3);
  }

  .value-props__content:not(:last-of-type) {
    margin-bottom: 0;
  }
}

@media only screen and (min-width: 1024px) {
  .nav-desktop {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: calc(100% - 106px);
    max-width: 1440px;
    padding: 42px 53px 51px;
    margin: 0 auto;
  }

  .nav-mobile {
    display: none;
  }

  .nav-desktop__menu a {
    margin-left: 48px;
    color: #000;
    font-family: "Roboto", Helvetica, sans-serif;
    font-size: 14px;
    letter-spacing: 1;
    line-height: 16px;
    font-weight: 900;
    text-transform: uppercase;
    text-decoration: none;
  }

  .nav-desktop__menu a:first-of-type {
    margin-left: 0;
  }

  .nav-desktop__menu a:last-of-type {
    color: #FF2500;
  }

  .nav-desktop__search {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 41px;
  }

  .nav-desktop__search input {
    width: 193px;
    padding: 10px;
    border: 1px solid #C4C4C4;
    border-radius: 30px;
  }

  .nav-desktop__search input::placeholder {
    color: #A3A3A3;
    font-family: "Roboto", Helvetica, sans-serif;
    font-size: 13px;
    line-height: 15px;
    font-weight: 400;
  }

  .nav-desktop__search button {
    position: absolute;
    right: 10px;
    background: none;
    border: 0;
  }

  .nav-desktop__right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-desktop__right .divider{
    height: 35px;
    margin: 0 23px 0 19px;
    border-right: 1px solid #D8D8D8;
  }

  .nav-desktop__account {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .nav-desktop__account a {
    color: #4A4A4A;
    font-family: "Roboto", Helvetica, sans-serif;
    font-size: 12px;
    line-height: 14px;
    font-weight: 400;
  }

  .nav-desktop__account a.my-account {
    margin-bottom: 3px;
    font-size: 14px;
    line-height: 16px;
    text-decoration: none;
  }

  .nav-desktop__cart {
    position: relative;
  }

  .nav-desktop__cart img {
    width: 38px;
  }

  .nav-desktop__cart span {
    position: absolute;
    top: 2px;
    right: 3px;
    color: #fff;
    font-family: "Roboto Black", Helvetica, sans-serif;
    font-size: 10px;
    line-height: 11px;
    font-weight: 900;
    text-transform: uppercase;
  }

  .promo-bar {
    font-size: 14px;
    line-height: 20px;
  }

  section:not(.value-props__container) {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
  }

  .value-props__content img {
    max-width: 85px;
    margin-bottom: 29px;
  }

  .value-props__text {
    font-size: 20px;
    letter-spacing: 1px;
    line-height: 28px;
  }
}